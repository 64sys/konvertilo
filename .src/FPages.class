Public inxPages As New Integer[]
Public strState As String
Public intWhole As Integer ' Todos los botones activados
Public intNothing As Integer ' Ning√∫n boton activado

Public Sub Run(inx As Integer[]) 'As Integer[]

  Dim tgb As ToggleButton
  Dim intP As Integer

  inxPages = inx

  For intP = 0 To inxPages.Max
    tgb = New ToggleButton(pnlPages) As "Page"

    With tgb
      .Name = "tgb" & ":" & CStr(intP)
      Select String.Len(CStr(intP))
        Case String.Len(CStr(inxPages.Count))
          .Text = CStr(intP + 1)
          .Tag = intP
        Case Else
          .Text = String(String.Len(CStr(inxPages.Count)) - String.Len(CStr(intP)), "0") & CStr(intP + 1)
          .Tag = intP
      End Select
      .Height = 28
      If String.Len(CStr(inxPages.Count)) * 6 < .Height Then
        .Width = .Height
      Else
        .Width = String.Len(CStr(inxPages.Count)) * 7
      Endif
      '.Width = String.Len(CStr(inxPages.Count)) * 6
      Select inxPages[intP]
        Case 1
          .Value = True
        Case Else
          .Value = False
      End Select

    End With

  Next

  strState = "loaded"
  Me.ShowModal()

  'Return Not Me.ShowModal()

End

