Public Sub Page_Click()

  Dim obj As Object

  If strState = "loaded" Then
    For Each obj In pnlPages.Children
      If Object.Type(obj) = "ToggleButton" Then
        If obj.Value = True Then
          MStarter.stxPages[obj.Tag] = 1
          Inc intWhole
        Else
          MStarter.stxPages[obj.Tag] = 0
          Inc intNothing
        Endif
      Endif
    Next
  Endif

  'cmdChangeBtn()

End

Public Sub btnNothing_Click()

  Dim obj As Object

  strState = "loading"

  For Each obj In pnlPages.Children
    If Object.Type(obj) = "ToggleButton" Then
      obj.Value = False
    Endif
  Next

  strState = "loaded"

End

Public Sub btnWhole_Click()

  Dim obj As Object

  strState = "loading"

  For Each obj In pnlPages.Children
    If Object.Type(obj) = "ToggleButton" Then
      obj.Value = True
    Endif
  Next

  strState = "loaded"

End
